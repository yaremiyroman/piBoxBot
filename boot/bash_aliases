### GIT ###

alias g='git'
alias s='git status'
alias br='git branch'
alias fetch='git fetch --all'
alias co='git checkout'

alias ci='git commit -m"$1"'
alias push='git push origin $1'
alias pull='git pull origin $1'

alias m='git pull origin master'
alias master='git push origin master'
alias d='git pull origin dev'
alias dev='git push origin dev'
